<% content_for :title, "Create Account" %>
<div class = "container">
	<h1>Create a New Account</h1>
	<div class="form">
		<% if @user %>
			<div class = "error_message">
				<% @user.errors.full_messages.each do |msg| %>
					<p><%= msg %></p>
				<% end %>
			</div>
		<% end %>
		<%= form_for(@user, method: :post, url: {action: :create}) do |form| %>
		<table>
			<tr>
				<td><%= form.label(:first_name, "First Name: ") %></td>
				<td><%= form.text_field(:first_name) %></td>
			</tr>
			<tr>
				<td><%= form.label(:last_name, "Last Name: ") %></td>
				<td><%= form.text_field(:last_name) %></td>
			</tr>
			<tr>
				<td><%= form.label(:login, "Username: ") %></td>
				<td><%= form.text_field(:login) %></td>
			</tr>
			<tr>
				<td><%= form.label(:password, "Password: ") %></td>
				<td><%= form.password_field(:password) %></td>
			</tr>
			<tr>
				<td><%= form.label(:password_confirmation, "Confirm Password: ") %></td>
				<td><%= form.password_field(:password_confirmation) %></td>
			</tr>
		</table>
			<div><%= form.submit "Register" %></div>
		<% end %>
	</div>
</div>